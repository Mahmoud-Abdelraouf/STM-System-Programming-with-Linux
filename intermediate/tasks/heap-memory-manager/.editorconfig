# EditorConfig is awesome: https://editorconfig.org
# Top-most EditorConfig file
root = true

# Default settings (applies to all files unless overridden below)
[*]
charset = utf-8              # Use UTF-8 encoding
indent_style = space         # Use spaces for indentation
indent_size = 4              # Indent with 4 spaces
end_of_line = lf             # Use LF (Unix-style) line endings
trim_trailing_whitespace = true  # Remove trailing whitespace
insert_final_newline = true      # Ensure newline at end of file

# Specific configuration for C/C++ source and header files
[*.{c,h}]
indent_style = space
indent_size = 4
c_basic_offset = 4           # Offset for C/C++ code

# Specific configuration for Markdown files
[*.md]
max_line_length = 80         # Wrap lines at 80 characters
trim_trailing_whitespace = false  # Allow trailing whitespace (important for Markdown)

# Specific configuration for Makefiles
[Makefile]
indent_style = tab           # Makefiles require tabs for indentation
indent_size = 4

# Specific configuration for images and binaries
[*.{png,jpg,gif,ico,so,exe}]
binary = true                # Treat these as binary files

# Specific configuration for Python (if applicable)
[*.py]
indent_style = space
indent_size = 4

# Specific configuration for JSON files
[*.json]
indent_style = space
indent_size = 2

# Specific configuration for YAML files
[*.yml]
indent_style = space
indent_size = 2

